<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_Menu">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|clip_vertical|start|right|center_horizontal|fill"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_light"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="110dp"
                app:srcCompat="@mipmap/logo1" />

            <Button
                android:id="@+id/btnAgregarLib"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:backgroud="@drawable/btn_uno"
                android:background="@drawable/btn_uno"
                android:drawableLeft="@mipmap/agregar"
                android:drawableRight="@mipmap/arrow"
                android:gravity="left|center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="@string/btn_menu_Al"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnListaLib"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_uno"
                android:drawableLeft="@mipmap/info"
                android:drawableRight="@mipmap/arrow"
                android:gravity="center"
                android:text="@string/btn_menu_Ll"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLibrosAlq"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_uno"
                android:drawableLeft="@mipmap/alquilado"
                android:drawableRight="@mipmap/arrow"
                android:gravity="center"
                android:text="@string/btn_menu_LA"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.07" />

</android.support.constraint.ConstraintLayout>